<UserControl x:Class="CryptoExplorer.View.InformationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoExplorer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="{Binding ElementName=InfoPage, Path=Width}" Height="{Binding ElementName=InfoPage, Path=Height}">
        <StackPanel Background="WhiteSmoke" Orientation="Vertical">
            <TextBlock Text=".NET Developer Test Assignment" Margin="0 80 0 0" HorizontalAlignment="Center" FontSize="26"/>

            <Grid Margin="30 60 0 0" HorizontalAlignment="Left">
                <TextBlock Grid.Row="0" Grid.Column="1" 
                   Text="This is an application for reviewing and analyzing cryptocurrencies. Which supports viewing any cryptocurrency. On the home page you can see 10 popular ones. A menu has also been created that will help you navigate the application."
                   TextWrapping="Wrap" HorizontalAlignment="Left"  FontSize="18" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
