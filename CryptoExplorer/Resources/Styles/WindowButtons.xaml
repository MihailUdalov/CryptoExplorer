    <Style x:Key="MaximizeButtonStyle" TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Name="Border">
                        <Grid>
                            <Rectangle Fill="Transparent"/>
                            <Path Name="Icon" Data="{StaticResource MaximizeIcon}"
