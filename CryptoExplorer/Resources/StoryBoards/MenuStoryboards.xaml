<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="sbShowMenu" >
        <DoubleAnimation Storyboard.TargetProperty="Width" From="60" To="200" DecelerationRatio=".9" Duration="0:0:0.5" />
    </Storyboard>
    <Storyboard x:Key="sbHideMenu">
        <DoubleAnimation Storyboard.TargetProperty="Width" From="200" To="60" AccelerationRatio=".9" Duration="0:0:0.5" />
    </Storyboard>
</ResourceDictionary>